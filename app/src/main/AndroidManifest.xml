        <activity
            android:name=".SubSelectedCategoryScreen"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".MainScreen"
            android:exported="false"
            android:label="@string/title_activity_main_screen">
